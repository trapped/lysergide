.row
	.col-md-12
		%h1.page-header= "#{user.name}/#{repo.name} - Builds"
.row-fluid
	.panel.panel-default
		.panel-body
			- if repo.builds.length > 0
				.list-group.lys-builds
					- repo.builds.each do |build|
						%a.list-group-item{:href => "/repo/#{build.repo.name}/builds/#{build.number}"}
							- case build.status
							- when :scheduled
								%i.fa.fa-calendar.fa-fw
							- when :failed
								%i.fa.fa-warning.fa-fw{:style => 'color: firebrick'}
							- when :success
								%i.fa.fa-check.fa-fw{:style => 'color: green'}
							- when :working
								%i.fa.fa-gear.fa-fw
							- else
								%i.fa.fa-gear.fa-fw
							Build
							%b= "##{build.number}"
							%span= build.status
							%span.pull-right.text-muted.small{:style => 'padding-left: 2em'}
								%em= build.ref
							%span.pull-right.text-muted.small{:style => 'padding-left: 2em'}
								%em= helpers.duration(build.duration)
							%span.pull-right.text-muted.small
								%em= build.date
			- else
				There are no builds to show here.